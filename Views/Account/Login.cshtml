@model AccountLoginModel
@{
    Layout = "_Layout";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="col-lg-6 col-md-8 col-sm-10 col-12">
        <div class="card shadow-lg">
            <div class="card-header text-center">
                <h4 class="mb-0">Giriş Yap</h4>
            </div>
            <div class="card-body d-flex flex-column justify-content-center" style="min-height: 60vh;">
                <form method="post" enctype="multipart/form-data" class="flex-grow-1">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="mb-4 row">
                        <label asp-for="Email" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9">
                            <input asp-for="Email" class="form-control form-control"
                                placeholder="Email adresinizi girin" />
                        </div>
                    </div>

                    <div class="mb-4 row">
                        <label asp-for="Password" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9">
                            <input asp-for="Password" class="form-control form-control" placeholder="Şifrenizi girin" />
                        </div>
                    </div>

                    <div class="mb-4 form-check">
                        <input asp-for="BeniHatirla" class="form-check-input" />
                        <label asp-for="BeniHatirla" class="form-check-label"></label>
                        <span asp-validation-for="BeniHatirla" class="text-danger"></span>
                    </div>

                    <div class="d-grid mt-auto">
                        <button type="submit" class="btn btn-primary">Giriş Yap</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>