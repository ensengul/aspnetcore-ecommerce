@model Urun

<div class="col">
    <div class="card shadow">
        <div class="img-wrap">
            @* <span class="badge bg-success">İndirim</span> *@
            <img src="~/img/@Model.Resim" alt="ürün 1" class="card-img-top">
        </div>

        <div class="border-top info-wrap">
            <a class="float-end btn btn-light">
                <i class="fa-regular fa-heart"></i>
            </a>
            <a asp-controller="Urun" asp-action="Details" asp-route-id="@Model.Id"
                class="title text-truncate">@Model.UrunAdi</a>
            <div class="price-wrap">
                <span class="price">@Model.Fiyat₺</span>
            </div>
        </div>
    </div>
</div>