@model Urun

<section class="mt-5">
    <div class="container">
        <div class="row">
            <!-- Ürün Görselleri -->
            <div class="col-lg-5 mb-4">
                <div class="card">
                    <img src="~/img/@Model.Resim" class="card-img-top" alt="@Model.UrunAdi">

                </div>
            </div>

            <!-- Ürün Bilgileri -->
            <div class="col-lg-7">
                <h2 class="fw-bold">@Model.UrunAdi</h2>

                <div class="mb-2">
                    <span class="text-warning fs-5">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star text-muted"></i>
                    </span>
                </div>

                <p class="text-success fw-semibold">Stokta</p>
                <h4 class="text-danger fw-bold mb-3">@Model.Fiyat₺</h4>
                <p class="mb-3">@Model.Aciklama</p>

                <div class="d-flex gap-2">
                    <form method="post" action="/Cart/AddToCart">
                        <input type="hidden" name="urunId" value="@Model.Id">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-shopping-basket me-1"></i> Sepete Ekle
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Benzer Ürünler -->
<section class="mt-5">
    <div class="container">
        <h4 class="mb-4">Benzer Ürünler</h4>
        <div class="row g-3">
            @foreach (var item in (List<Urun>)TempData["BenzerUrunler"]!)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="card h-100 shadow-sm">
                        <div class="position-relative">
                            <img src="~/img/@item.Resim" class="card-img-top" alt="@item.UrunAdi">
                            <span class="position-absolute top-0 end-0 m-2 text-danger fs-5">
                                <i class="fa-regular fa-heart"></i>
                            </span>
                        </div>

                        <div class="card-body d-flex flex-column">
                            <h6 class="card-title text-truncate" title="@item.UrunAdi">@item.UrunAdi</h6>
                            <p class="text-danger fw-bold mb-3">@item.Fiyat₺</p>
                            <a asp-controller="Order" asp-action="CheckOut" class="btn btn-outline-primary mt-auto">
                                <i class="fa fa-shopping-basket me-1"></i> Sepete Ekle
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>