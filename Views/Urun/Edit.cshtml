@model UrunEditModel
@{
    Layout = "_AdminLayout";
}

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-9">
            <div class="card shadow">
                <div class="card-header py-1 d-flex justify-content-between align-items-center">
                    <h5 class="card-title">Ürünü Güncelle</h5>
                    <a asp-controller="Urun" asp-action="Index" class="btn btn-sm btn-primary">
                        <i class="fa-solid fa-list"></i>
                    </a>
                </div>
                <div class="card-body">
                    <input type="hidden" asp-for="Id">
                    <input type="hidden" asp-for="Resim">

                    <div asp-validation-summary="All"></div>
                    <div class="row mb-3">
                        <label asp-for="UrunAdi" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="UrunAdi" class="form-control">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Aciklama" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <textarea asp-for="Aciklama" rows="3" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Fiyat" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Fiyat" class="form-control">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-10">
                            <select asp-for="KategoriId" class="form-select" asp-items="ViewBag.kategoriler">
                                <option>Seçiniz</option>
                            </select>
                            <span asp-validation-for="KategoriId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow">
                <div class="card-body">
                    <img src="~/img/@Model.Resim" class="img-thumbnail" alt="">
                    <input asp-for="ResimDosyasi" type="file" class="form-control mt-3">
                </div>
            </div>
        </div>
    </div>
</form>